{
  "UseSwagger": true,
  "Swagger": {
    "title": "Auth",
    "version": "1",
    "versionDoc": "1",
    "endpoint": "/swagger/1/swagger.json",
    "SecurityName": "Authorization",
    "SecurityDescription": "Few methods need JWToken"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Auth": {
    "BytesQTY": 10,
    "JWToken": {
      "key": "ADD_CUSTOM_PRIVATE_KEY_HERE",
      "expireValueSeconds": "300",
      "refreshExpireValueSeconds": "900",
      "issuer": "http://localhost:5000"
    }
  },
  "AllowedHostsCors": [
    "http://localhost:4200" // local SPA Default Angular
  ]
}
